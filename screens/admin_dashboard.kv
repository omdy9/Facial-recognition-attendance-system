<AdminDashboard>:
    name: "admin_dashboard"

    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 20

        MDLabel:
            text: "Admin Dashboard"
            font_style: "H4"
            halign: "center"
            size_hint_y: None
            height: self.texture_size[0]

        ScrollView:
            do_scroll_x: False

            MDBoxLayout:
                id: content_box
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: 10

                # Add admin dashboard content here, e.g., user management, attendance overview, etc.
                MDLabel:
                    text: "Welcome to the Admin Dashboard"
                    halign: "center"
